%html
  %head
    %title Crow
    %link{:href => "bootstrap.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "crow.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "log.css", :rel => "stylesheet", :type => "text/css"}
  %body
    #page
      .topbar
        .topbar-inner
          .container-fluid
            %a.brand{:href => "#"} Crow
            %ul.nav
              %li.home-menu.dropdown
                %a.dropdown-toggle{:href => "#"} Home
                %ul.dropdown-menu
                  %li 
                    %a{:href=>"#"}Accounts
                  %li 
                    %a{:href=>"#"}Plugins
                  %li 
                    %a{:href=>"#"}Settings
                  %li 
                    %a#toggle_logs{:href=>"#"}Toggle Logs
              %li
                %a{:href => "#about"} About

            %p.pull-right XMPP is crazy...
      .container-fluid
        .sidebar
          .well
            #connect-panel
              %form.form-stacked{:action => ""}
                .clearfix
                  %label{:for => "jid"} JID
                  .input
                    %input#jid.span3{:type => "text"}/
                .clearfix
                  %label{:for => "password"} Password
                  .input
                    %input#password.span3{:type => "password"}/
                %button#connect.btn.primary Connect
            #disconnect-panel
              %button#disconnect.btn.danger Disonnect
            #friends-panel
              %h2 Friends
              #friends
        .content
          .log{"style"=>"display:none"}
          .chats
            .main-header
              %strong Chat
            .main-body
              .chat 
                .messages
                .command
                  %textarea
              .right
            .main-footer
  %script{:src => "jquery-1.7.min.js"}
  %script{:src => "bootstrap-dropdown.js"}
  %script{:src => "log.js"}
  %script{:src => "crow.js"}
  %script{:src => "menus.js"}
  %script{:src => "hotkeys.js"}

